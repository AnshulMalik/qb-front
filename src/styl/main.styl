@import 'Colors.styl'
transform(str)
  -webkit-transform: str
  -moz-transform: str
  -ms-transform: str
  -o-transform: str
  transform: str

transition(prop, time)
  -webkit-transition: prop time
  -moz-transition: prop time
  -ms-transition: prop time
  -o-transition: prop time
  transition: prop time

*
  box-sizing: border-box
  margin: 0
  padding: 0
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  list-style: none

::-webkit-scrollbar
  background-color: transparent;
  width: 5px

::-webkit-scrollbar-thumb
  background-color: $Accent1;
  width: 5px

button
  &:focus
    outline: none

body
  width: 100vw
  height: 100vh
  overflow-x: hidden
  background-color: #ffffff
  color: $Base2

span.logo
  margin-left: -50px
  &:before, &:after
    position: absolute
    margin-top: -6px
    font-size: 3rem
  &:before
    content: "q"
    margin-left: -16px
    color: $Accent1
  &:after
    color: $Accent2
    content: "b"

nav.header
  width: 100vw
  height: 56px
  background-color: $White
  border-bottom: 2px solid $Grey
  text-align: center
  z-index: 1
  font-size: 10px
  > .nav-controls
    height: 56px
    display: inline-block
    position: relative
    > .brand
      font-weight: 900
      padding-top: 10px
    > span
      display: inline-block
      text-align: center
      height: 56px
      margin-left: 10px
      margin-right: 10px
      vertical-align: center
      cursor: pointer
      overflow: hidden
      > div
        padding-top: 10px
        height: 5px
        &:after
          content: ""
          height: 2px
          width: 60px
          position: absolute
          bottom: 0
          margin-left: -30px
          transition(all, 0.5s)
        > span
          display: block
        > span.mdi
          font-size: 20px
      &:hover
        > div
          color: $Accent2
          opacity: 0.8
          &:after
            background-color: $Accent2
            opacity: 0.8
div.profile
  position: absolute
  text-align: center
  > .slide
    width: 100vw
div.user-detail
  position: relative
  width: 100vw
.contest-start > div.contest-group
  border: 2px solid $Accent2
  border-radius: 10px
  padding: 20px
  overflow: hidden
  transition(all, 0.5s)
  &:after
    content: ""
    background-color: rgba($Accent2, 0.1)
    height: 100%
    width: 100%
    position: absolute
    top: 100%
    left: 0
    transition(all, 0.2s)
    z-index: -1
  &:hover
    border: 2px solid rgba($Accent2, 0.1)
    &:after
      top: 0
  > h4
    color: $Accent2
.contest-form
  margin-bottom: 20px
  > div
    margin-top: 20px
    margin-bottom: -10px
  > input, select
    padding: 10px
    width: 100%
    margin-top: 10px
    margin-bottom: 10px
    display: block
  > button
    margin-bottom: 20px
    margin-top: 20px
    font-weight: 600

div#select-players
  font-weight: 600
  position: fixed
  z-index: 100
  padding: 20px
  margin: 0 auto
  left: -320px
  top: 0
  height: 100vh
  width: 300px
  text-align: left
  background-color: $Grey
  box-shadow: 4px 0 0 rgba($Grey, 0.5)
  overflow-y: scroll
  overflow-x: hidden
  > h3
    > input
      width: 20px
      height: 20px
      float: right
  > ul
    > li
      color: $Accent2
      background-color: $White
      margin-top: 5px
      margin-bottom: 5px
      border-radius: 4px
      padding: 10px
      cursor: pointer
      transition(all, 0.2s)
      &:hover
        background-color: $Accent2
        color: $White
        padding-left: 15px
        border-left: 6px solid $White
    > li.active
      background-color: $Accent2
      color: $White
      padding-left: 15px
      border-left: 6px solid $Accent1
      border-right: 6px solid $Accent1
      > .badge
        float: right
        padding: 5px
        background-color: $Base3
        color: $Accent1

#close-players-list
  position: absolute
  right: 20px
  top: 5px
  font-weight: 600;
  font-size: 30px;
  cursor: pointer
  &:hover
    color: $Accent2

#contest-start-timer
  font-family: sans-serif;
  display: none;
  font-weight: 100;
  text-align: center;
  font-size: 30px;
  > div
    color: #fff;
    padding: 10px;
    border-radius: 3px;
    background: $Base2;
    display: inline-block;
    > span
      padding: 15px;
      border-radius: 3px;
      background: $Accent1;
      display: block;
    > .label
      padding-top: 5px;
      font-size: 16px;

#alert-box
  position: fixed
  bottom: -150px
  opacity: 0
  left: 50%
  transform: translate(-50%)
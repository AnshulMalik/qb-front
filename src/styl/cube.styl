@import 'Colors.styl'

::-webkit-scrollbar-track:horizontal
  width: 5px;
  box-shadow: inset 0 1px 0 rgba(220, 172, 0, .14), inset 0 -1px 0 rgba(220, 172, 0, .07)

::-webkit-scrollbar-thumb:horizontal
  height: 5px
  box-shadow: inset 1px 1px 0 rgba(220, 172, 0, .1), inset -1px 0 0 rgba(220, 172, 0, .07);

div#game-frame
  display: none
  position: relative;
  width: 100vw;
  padding-top: 20px
  background-color: $Accent1;
  overflow-x: hidden;
  &:after
    position: absolute
    font-size: 1.5rem
    font-weight: 600
    padding: 2px 10px 3px 10px
    top: 0
    background-color: $Accent2
    color: $White
  &:after
    content: attr(data-score)
    left: 0
  >.game-frame-cover
    display: none;
    height: 100%;
    width: 100vw;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba($Grey, 0.6);
    z-index: 5;
    &:after
      content: attr(data-result)
      position: absolute
      top: 150px
      left: 40%
      font-size: 4rem
      font-color: $White;
.stage
  margin: 10px auto;
  margin-bottom: 100px;
  text-align: center;
  width: 400px;
  height: 400px;
  transform: scale(0.75);
  -webkit-perspective: 1600px;
  -webkit-perspective-origin: 50% -240px;

.cube
  color: #000000
  font-weight: 600
  -webkit-transform-style: preserve-3d;
  transform-origin: 200px 200px;
  -webkit-transform: rotate3d(0, 1, 0, 45deg);
  -moz-transform: rotate3d(0, 1, 0, 45deg);
  -ms-transform: rotate3d(0, 1, 0, 45deg);
  -o-transform: rotate3d(0, 1, 0, 45deg);
  transform: rotate3d(0, 1, 0, 45deg);

.front
  -webkit-transform: translateZ(200px);
  background-color: rgb(200, 150, 100);

.back
  -webkit-transform: rotateY(180deg) translateZ(200px);
  background-color: rgb(200, 150, 100);

.top
  -webkit-transform: rotateX(90deg) translateZ(200px);
  background-color: rgb(100, 150, 200);


.bottom
  -webkit-transform: rotateX(-90deg) translateZ(200px);
  background-color: rgb(100, 150, 200);

.left
  -webkit-transform: rotateY(-90deg) translateZ(200px);
  background-color: rgb(200, 250, 100);

.right
  -webkit-transform: rotateY(90deg) translateZ(200px);
  background-color: rgb(200, 250, 100);

figure
  display: block;
  position: absolute;
  width: 400px;
  height: 400px;
  background-color: #60c2ef;
  opacity: 0.9;
  border-radius: 5px;
  -webkit-transform-origin: 50% 50% 0;
  overflow: hidden;
  &:before,
  &:after
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
  > div
    display: inline-block;
    position: relative;
    height: 80px;
    width: 80px;
    font-size: 20px;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    line-height: 15px;
    overflow: hidden;
    -webkit-transition: all 0.2s;
    -moz-transition: all 0.2s;
    -ms-transition: all 0.2s;
    -o-transition: all 0.2s;
    transition: all 0.2s;
    > span
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -10px);
  > div.tile
    background-color: rgba(0,0,0,0.5);
    color: #fff;
  > div:hover
    background-color: rgba(200,50,50,0.5);
#question-holder, #question-number
    color: $Base1
    font-weight: 600
#question-number
    color: $White
    font-size: 20px
#next-question, #previous-question
    font-size: 20px
#selected-answer
    padding: 15px
    height: 80px
    margin-left: 50%
    vertical-align: bottom
    transform: translate(-50%, 0)
    overflow-x: scroll
    overflow-y: hidden
    > span
      padding: 10px
      background-color: rgba($White, 0.5)
      border-radius: 4px
      border: 2px solid transparent
      margin: 2px
      font-weight: 700
      color: $White
      cursor: pointer
      transition: all 0.5s
      &:hover
        background-color: $White
        color: $Accent1

#game-timer
  position: absolute
  top: 150px;
  right: 30px;
  font-family: sans-serif;
  font-weight: 100;
  text-align: center;
  font-size: 20px;
  > div
    color: #fff;
    padding: 6px;
    border-radius: 3px;
    display: block;
    > span
      padding: 10px;
      border-radius: 3px;
      display: block;
    > .label
      padding-top: 5px;
      font-size: 10px;
      color: $Base1
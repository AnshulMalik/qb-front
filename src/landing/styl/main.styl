@import '../../styl/Colors.styl'
transform(str)
  -webkit-transform: str
  -moz-transform: str
  -ms-transform: str
  -o-transform: str
  transform: str

transition(prop, time)
  -webkit-transition: prop time
  -moz-transition: prop time
  -ms-transition: prop time
  -o-transition: prop time
  transition: prop time

*
  box-sizing: border-box
  margin: 0
  padding: 0
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  list-style: none

body
  width: 100vw
  height: 100vh
  overflow-x: hidden
  background-color: #ffffff
  color: $Base2

span.logo
  margin-left: -50px
  &:before, &:after
    position: absolute
    margin-top: -10px
    font-size: 4rem
  &:before
    content: "q"
    margin-left: -18px
    color: $Accent1
  &:after
    color: $Accent2
    content: "b"

nav.header
  width: 100vw
  height: 80px
  position: fixed
  top: 0
  left: 0
  background-color: $White
  border-bottom: 2px solid $Grey
  text-align: center
  z-index: 1
  > .nav-controls
    height: 80px
    display: inline-block
    position: relative
    > .brand
      font-weight: 900
      padding-top: 20px
      font-size: 20px
    > span
      display: inline-block
      text-align: center
      height: 80px
      margin-left: 10px
      margin-right: 10px
      vertical-align: center
      cursor: pointer
      overflow: hidden
      > div
        padding-top: 15px
        height: 10px
        &:after
          content: ""
          height: 2px
          width: 60px
          position: absolute
          bottom: 0
          margin-left: -30px
          transition(all, 0.5s)
        > span
          display: block
        > span.mdi
          font-size: 30px
      &:hover
        > div
          color: $Accent2
          opacity: 0.8
          &:after
            background-color: $Accent2
            opacity: 0.8
div.profile
  position: absolute
  text-align: center
  margin-top: 80px
  > .slide
    width: 100vw
div.user-detail
  position: relative
  width: 100vw
  padding: 30px
  >img.avatar
    border-radius: 50%
    height: 150px
    width: 150px
    border: solid 10px $Base1
    box-sizing: content-box
    transition(all, 0.2s)
    &:hover
      transform(scale(1.05))
  >div.user-name
    width: auto
    font-size: 2rem
    font-weight: 600
    color: $Base1
    padding: 10px
    margin-top: 10px
.contest-start > div.contest-group
  border: 2px solid $Accent2
  border-radius: 10px
  padding: 20px
  overflow: hidden
  transition(all, 0.5s)
  &:after
    content: ""
    background-color: rgba($Accent2, 0.1)
    height: 100%
    width: 100%
    position: absolute
    top: 100%
    left: 0
    transition(all, 0.2s)
    z-index: -1
  &:hover
    border: 2px solid rgba($Accent2, 0.1)
    &:after
      top: 0
  > h4
    color: $Accent2
.contest-form
  margin-bottom: 20px
  > div
    margin-top: 20px
    margin-bottom: -10px
  > input, select
    padding: 10px
    margin-top: 10px
    margin-bottom: 10px
    display: block
  > select, button
    margin-top: 20px
    margin-bottom: 20px
  > button
    font-weight: 600

div#select-players
  font-weight: 600
  position: fixed
  z-index: 100
  padding: 20px
  margin: 0 auto
  left: -320px
  top: 0
  height: 100vh
  width: 300px
  text-align: left
  background-color: $Grey
  box-shadow: 4px 0 0 rgba($Grey, 0.5)
  overflow-y: scroll
  overflow-x: hidden
  > h3
    > input
      width: 20px
      height: 20px
      float: right
  > ul
    > li
      color: $Accent2
      background-color: $White
      margin-top: 5px
      margin-bottom: 5px
      border-radius: 4px
      padding: 10px
      cursor: pointer
      transition(all, 0.2s)
      &:hover
        background-color: $Accent2
        color: $White
        padding-left: 15px
        border-left: 6px solid $White
    > li.active
      background-color: $Accent2
      color: $White
      padding-left: 15px
      border-left: 6px solid $Accent1
      border-right: 6px solid $Accent1
#close-players-list
    float: right;
    font-weight: 600;
    font-size: 30px;
    cursor: pointer
    &:hover
      color: $Accent2
